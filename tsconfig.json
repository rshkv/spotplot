// As per https://www.typescriptlang.org/docs/handbook/react-&-webpack.html
{
	"compilerOptions": {
		"outDir": "../client/dist/",
		"sourceMap": true,
		"module": "commonjs",
		"target": "es5",
		"jsx": "react",
		"lib": [ "esnext", "dom" ],
		"noImplicitAny": true,
		"noImplicitReturns": true
	},
	"include": [
		"./src/**/*"
	]
}